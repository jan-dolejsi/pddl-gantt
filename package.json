{
  "name": "typescript-nodejs-template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "mocha -- out/test/*.js",
    "pretest": "eslint ./src/*.ts && npm run compile",
    "build": "tsc",
    "compile": "tsc && npm run copyToDist",
    "copyToDist": "copyfiles --error --verbose --flat ./out/src/*.* ./dist/",
    "prepack": "npm run test && npm run copyToDist",
    "compileSample": "browserify src/PlanView.ts src/sample.ts -p tsify > out-sample/sample.js",
    "watchSample": "watchify src/PlanView.ts src/sample.ts -p tsify -o out-sample/sample.js --verbose",
    "watch": "tsc -w"
  },
  "keywords": [],
  "author": "Jan Dolejsi",
  "license": "MIT/UNLICENSED",
  "devDependencies": {
    "@types/chai": "4.1.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.1",
    "@types/nunjucks": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "browserify": "^16.5.2",
    "chai": "^4.2.0",
    "copyfiles": "2.2.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "tsify": "^5.0.2",
    "typescript": "^3.8.3",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "pddl-workspace": "file:../pddl-workspace"
  }
}
