    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "label": "npm: compile",
            "detail": "tsc && npm run copyToDist"
        },
        {
            "type": "npm",
            "script": "watchSample",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "npm: watchSample",
            "detail": "watchify src/PlanView.ts src/sample.ts -p tsify -o out-sample/sample.js --verbose",
            "isBackground": true
        }
    ]
}